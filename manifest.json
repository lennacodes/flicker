{
  "manifest_version": 3,
  "name": "Flicker â€” Candlelight Ambiance for Your Browser",
  "version": "1.0.0",
  "description": "A cozy, customizable candlelight overlay that reduces blue light and adds warm ambiance to any web page.",
  "permissions": ["storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "flicker@extension",
      "strict_min_version": "109.0"
    }
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon-48.svg",
      "96": "icons/icon-96.svg"
    }
  },
  "icons": {
    "48": "icons/icon-48.svg",
    "96": "icons/icon-96.svg"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
